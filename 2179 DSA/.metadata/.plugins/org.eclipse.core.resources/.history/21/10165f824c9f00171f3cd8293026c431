void sort::input()
{
	for(int i=0;i<10;i++)
	{
		cin>>d[i].name>>d[i].mks;
	}
}

void sort::buble_sort()
{
	float temp;
	string tempn;
	for(int i=1;i<=9;i++)
	{
		for(int j=0;j<10-i;j++)
		{
			if(d[j].mks > d[j+1].mks)
			{
				temp=d[j].mks;
				d[j].mks=d[j+1].mks;
				d[j+1].mks=temp;

				strcpy()
			}
		}
	}
}

